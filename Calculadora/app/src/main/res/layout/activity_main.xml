<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    tools:context=".MainActivity"
    android:layout_alignParentLeft="true"
    android:background="#2E2E2E">


    <TextView
        android:id="@+id/texto_numeros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridlayout"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:inputType="number"
        android:maxLength="14"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="50dp"
        android:height="100dp"
        android:gravity="end"
        android:textAlignment="textEnd" />

    <GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:columnCount="4"
        android:rowCount="5"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/tecla_c"
            style="@style/AppTheme.BotonCalculadora.Naranja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="C" />

        <Button
            android:id="@+id/tecla_dividir"
            style="@style/AppTheme.BotonCalculadora.Naranja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="/" />

        <Button
            android:id="@+id/tecla_multi"
            style="@style/AppTheme.BotonCalculadora.Naranja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="X" />

        <Button
            android:id="@+id/tecla_borrar"
            style="@style/AppTheme.BotonCalculadora.Naranja"
            android:layout_width="103dp"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:text="BORRAR" />

        <Button
            android:id="@+id/numero_7"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="7" />

        <Button
            android:id="@+id/numero_8"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="8" />

        <Button
            android:id="@+id/numero_9"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="9" />

        <Button
            android:id="@+id/tecla_menos"
            style="@style/AppTheme.BotonCalculadora.Naranja"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:text="-" />

        <Button
            android:id="@+id/numero_4"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4" />

        <Button
            android:id="@+id/numero_5"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="5" />

        <Button
            android:id="@+id/numero_6"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:text="6" />

        <Button
            android:id="@+id/tecla_mas"
            style="@style/AppTheme.BotonCalculadora.Naranja"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal"
            android:text="+" />

        <Button
            android:id="@+id/numero_1"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1" />

        <Button
            android:id="@+id/numero_2"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="2" />

        <Button
            android:id="@+id/numero_3"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:text="3" />

        <Button
            android:id="@+id/signo_igual"
            style="@style/AppTheme.BotonCalculadora.Naranja"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:text="=" />

        <Button
            android:id="@+id/numero_0"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"
            android:text="0" />

        <Button
            android:id="@+id/signo_punto"
            style="@style/AppTheme.BotonCalculadora.Azul"
            android:layout_row="4"
            android:layout_column="2"
            android:text="." />
    </GridLayout>
</RelativeLayout>